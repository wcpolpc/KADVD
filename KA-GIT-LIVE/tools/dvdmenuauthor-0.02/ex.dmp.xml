    </tex:page>
    <vob tex:file="" pause="inf" />
    <button name="a" > jump vmgm menu 1; </button>
    <button name="bb"> jump menu 5; </button>
    <button name="ddd"> jump title 1 chapter 1; </button>
    <post> jump vmgm menu 1; </post>
   </pgc>
   <pgc> <!-- titleset 1 menu 4 -->
    <tex:page>
